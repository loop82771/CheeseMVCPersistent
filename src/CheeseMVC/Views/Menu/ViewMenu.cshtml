
@{
    ViewBag.Title = "MENU NAME";
}


<h2>@Model.Menu.Name</h2>

<table class="table">

    <tr>
        <th>Name</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <a href="/Menu/ViewMenu/" @item.Cheeses.ID><td>@item.Cheeses.Name</td></a>

        </tr>
    }
</table>

@if (Model.Count == 0)
{
    <p>No menus yet!</p>
}

    <a href="/Menu/ViewMenu/"@Model.Menu.ID>Add Menu</a>